# Production Environment Variables for VPS Deployment
# Copy this file to .env on your VPS and update the values

# Database Configuration
POSTGRES_DB=snapp_clone_prod
POSTGRES_USER=snapp_user
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://snapp_user:your_secure_postgres_password_here@postgres:5432/snapp_clone_prod

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_for_production_change_this

# CORS Configuration
CORSS_ORIGIN=http://your-vps-ip:3535,https://your-domain.com

# Logging
LOG_LEVEL=info

# Admin Panel Configuration
VITE_API_URL=http://your-vps-ip:3535

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Backend Port
PORT=3535